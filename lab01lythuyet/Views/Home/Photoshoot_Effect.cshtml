﻿
@{
    ViewBag.Title = "Trangchu";
    Layout = "~/Views/Shared/_Photoshoot.cshtml";
}
<style type="text/css">
    body {
        width: 960px;
        margin: auto;
        font-family: Arial, sans-serif;
        color: #fcfcfc;
        background: #355664;
    }

    h1, h2, h3, h4, h5, h6 {
        font-family: forte, Arial, sans-serif;
    }

    h1 {
        font-size: 50px;
        padding: 10px 0 0;
        text-align: center;
    }

        h1 img {
            width: 300px;
            height: 200px;
            align-content: flex-start;
        }

    h2 {
        font-size: 40px;
        letter-spacing: 15px;
        text-align: center;
        border-bottom: 3px solid #416371;
        padding-bottom: 20px;
        margin: 0px;
    }

    h3 {
        text-align: right;
        font-size: 30px;
        font-weight: normal;
        margin: 0 0 10px;
    }

    div.article-content figure + p {
        line-height: 20px;
        padding-bottom: 5px;
        color: #94c258;
        margin: 0px;
    }

    img {
        width: 500px;
        height: 300px;
        border: none;
    }

    div.article-content {
        margin: 15px 0;
    }

    nav {
        background: #355664;
        padding-right: 5px;
        padding-left: 5px;
        padding-top: 0px;
        padding-bottom: 0px;
    }

    li {
        display: inline;
    }

        li a {
            color: #ffffff;
            margin: 5px 2px;
            padding: 7px 10px 4px;
            font-size: 30px;
            text-transform: lowercase;
        }

        li + li a {
            color: #7cb3E9;
            text-transform: none;
        }

        li + li + li a {
            color: #8ec45b;
            text-transform: uppercase;
        }

    article {
        height: 390px;
        background: #213e4a;
        padding: 20px;
        margin: 0 0 10px;
        border-radius: 10px;
    }

    figure {
        border: 3px solid #142830;
        float: right;
        height: 300px;
        width: 500px;
        margin: auto;
        margin-left: 15px;
        border-radius: 10px;
    }

    footer {
        border-top: 3px solid #142830;
        padding-top: 15px;
        margin-bottom: 30px;
        text-align: center;
        font-size: 20px;
    }
</style>